{
  "name": "scripture-quest-backend",
  "version": "1.0.0",
  "description": "Backend API for Scripture Quest - Interactive Bible Learning App",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec \"npx ts-node -r tsconfig-paths/register src/server.ts\"",
    "start": "node dist/server.js",
    "build": "tsc",
    "vercel-build": "npm run build",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:init": "node scripts/init-db.js",
    "db:seed": "node scripts/seed-data.js",
    "db:migrate": "node scripts/migrate.js",
    "docker:build": "docker build -t scripture-quest-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env scripture-quest-api",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop scripture-quest-api",
    "pm2:restart": "pm2 restart scripture-quest-api",
    "pm2:logs": "pm2 logs scripture-quest-api"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^4.6.11",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "bible",
    "games",
    "education",
    "scripture",
    "api",
    "rest",
    "typescript",
    "mongodb"
  ],
  "author": "Scripture Quest Team",
  "license": "MIT"
}
